.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 0;
  box-sizing: border-box;
}

.video-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.video {
  width: 100vw;
  height: calc(100vw * 9 / 16);
  border-radius: 0;
  margin: 0;
  background-color: #f5f5f5;
}

.description {
  width: 100%;
  padding: 40rpx 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.text-line1 {
  color: #007AFF;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.text-line2, .text-line3, .text-line4 {
  color: #000000;
}

.text-line5 {
  color: #FF9500;
}

.debug-info {
  width: 100%;
  padding: 10rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 10rpx;
  word-break: break-all;
} 