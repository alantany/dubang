.display-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.display-video {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  background: #f5f5f5;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.video-path {
  width: 90%;
  padding: 10rpx;
  background: #eef7ff;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-bottom: 10rpx;
}

.error-info {
  width: 90%;
  padding: 10rpx;
  background: #fff2f0;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #ff4d4f;
  text-align: center;
  margin-bottom: 10rpx;
}

.description {
  width: 90%;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  line-height: 1.5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
} 