.display-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.display-image {
  width: 600rpx;
  height: 600rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.description {
  width: 90%;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
}

.description.show {
  opacity: 1;
  transform: translateY(0);
} 