.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 0;
  box-sizing: border-box;
  position: relative;
}

.video-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.video {
  width: 100vw;
  height: calc(100vw * 9 / 16);
  border-radius: 0;
  margin: 0;
  background-color: #f5f5f5;
}

.description {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.5;
  text-align: center;
  box-sizing: border-box;
}

.debug-info {
  width: 100%;
  padding: 10rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 10rpx;
  word-break: break-all;
} 