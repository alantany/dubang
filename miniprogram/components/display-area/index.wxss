.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 1rpx;
  box-sizing: border-box;
}

.video {
  width: 100%;
  height: calc((100vw - 2rpx) * 9 / 16);
  max-width: 750rpx;
  max-height: calc(750rpx * 9 / 16);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
}

.description {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.debug-info {
  width: 100%;
  padding: 10rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 10rpx;
  word-break: break-all;
} 