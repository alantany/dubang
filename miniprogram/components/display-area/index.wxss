.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 0;
  box-sizing: border-box;
}

.video-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.video {
  width: 100vw;
  height: calc(100vw * 9 / 16);
  border-radius: 0;
  margin: 0;
  background-color: #f5f5f5;
}

.description {
  width: 90%;
  margin: 30rpx auto;
  padding: 40rpx;
  text-align: left;
  box-sizing: border-box;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 欢迎文案的样式 */
.welcome-text {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.welcome-text text:first-child {
  font-size: 40rpx;
  font-weight: bold;
  background: linear-gradient(45deg, #007AFF, #00C6FF);
  -webkit-background-clip: text;
  color: transparent;
  text-align: center;
  padding: 10rpx 0;
}

.welcome-text text:nth-child(2) {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin: 10rpx 0;
}

.welcome-text text:nth-child(3) {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.6;
  text-align: center;
  padding: 20rpx;
  background-color: rgba(0, 122, 255, 0.1);
  border-radius: 12rpx;
}

.welcome-text text:last-child {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  font-style: italic;
  margin-top: 20rpx;
}

/* 高亮文本样式 */
.highlight {
  font-weight: bold;
  color: #007AFF;
  display: inline-block;
  padding: 0 4rpx;
}

/* 普通文案的样式 */
.normal-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.8;
  text-align: justify;
}

.debug-info {
  width: 100%;
  padding: 10rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 10rpx;
  word-break: break-all;
}