.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 0;
  box-sizing: border-box;
}

.video-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.video {
  width: 100vw;
  height: calc(100vw * 9 / 16);
  border-radius: 0;
  margin: 0;
  background-color: #f5f5f5;
}

.description {
  width: 100%;
  padding: 40rpx 20rpx;
  text-align: center;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 欢迎文案的样式 */
.welcome-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #007AFF;
  white-space: pre-wrap;
  line-height: 1.8;
}

/* 普通文案的样式 */
.normal-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.5;
}

.debug-info {
  width: 100%;
  padding: 10rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 10rpx;
  word-break: break-all;
} 