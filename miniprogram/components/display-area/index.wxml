<view class="display-area">
  <video 
    class="display-video"
    src="{{currentVideo}}"
    controls
    show-center-play-btn
    show-play-btn
    object-fit="contain"
    binderror="handleVideoError"
    bindloadedmetadata="handleVideoLoaded"
  ></video>
  <view class="video-path">当前视频: {{currentVideo}}</view>
  <view class="error-info" wx:if="{{error}}">错误信息: {{errorMsg}}</view>
  <view class="description">{{description}}</view>
</view> 