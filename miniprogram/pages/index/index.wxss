.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  box-sizing: border-box;
  background: #ffffff;
}

.test-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.inner-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #4CD964;
  box-shadow: 0 4rpx 12rpx rgba(76, 217, 100, 0.2);
}

.test-button:active {
  transform: scale(0.98);
}

.button-text {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  bottom: -50rpx;
} 