.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  padding-bottom: 300rpx;
  align-items: center;
}

.voice-button-area {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.test-button {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  transform: translateY(0);
}

.inner-circle {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #4CD964;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(76, 217, 100, 0.2);
}

.test-button:active {
  transform: scale(0.92) translateY(6rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.test-button:active .inner-circle {
  background: #44c559;
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(76, 217, 100, 0.1);
}

.button-text {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  bottom: -80rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.description-text {
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translate(-50%, -50%);
  width: 90%;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  line-height: 1.5;
}

.recognized-text {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
  font-weight: bold;
} 