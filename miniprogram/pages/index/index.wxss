.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  box-sizing: border-box;
  background: #ffffff;
}

.follow-up-area {
  width: 90%;
  margin-bottom: 20rpx;
}

.follow-up-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.follow-up-item {
  font-size: 28rpx;
  color: #4CD964;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.follow-up-item:active {
  background: #e5e5e5;
}

.input-area {
  width: 90%;
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.text-input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  background: #f5f5f5;
}

.send-button {
  width: 160rpx;
  height: 80rpx;
  background: #4CD964;
  color: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  padding: 0;
}

.test-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.inner-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #4CD964;
  box-shadow: 0 4rpx 12rpx rgba(76, 217, 100, 0.2);
}

.test-button:active {
  transform: scale(0.98);
}

.button-text {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  bottom: -50rpx;
} 