.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  padding-bottom: 300rpx;
}

.voice-button-area {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 20rpx;
}

.test-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.inner-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #4CD964;
  box-shadow: 0 4rpx 12rpx rgba(76, 217, 100, 0.2);
}

.test-button:active {
  transform: scale(0.95);
}

.button-text {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: 900;
  color: #333;
  bottom: -50rpx;
}

.description-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx;
  line-height: 1.5;
} 