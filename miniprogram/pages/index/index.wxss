.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  box-sizing: border-box;
  background: #ffffff;
}

.test-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(145deg, #45a049, #4CAF50);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 8rpx 8rpx 16rpx #3d8b40,
              -8rpx -8rpx 16rpx #59d35f;
  position: relative;
  border: 6rpx solid #4CAF50;
}

.inner-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(145deg, #ffffff, #f0f0f0);
  box-shadow: inset 4rpx 4rpx 8rpx #d9d9d9,
              inset -4rpx -4rpx 8rpx #ffffff;
}

.test-button:active {
  transform: scale(0.95);
  box-shadow: 4rpx 4rpx 8rpx #3d8b40,
              -4rpx -4rpx 8rpx #59d35f;
} 