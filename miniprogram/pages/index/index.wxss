.service-name {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.voice-button-area {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.voice-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.inner-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4834d4, #686de0);
  box-shadow: 0 4rpx 12rpx rgba(72, 52, 212, 0.2);
}

.voice-button:active {
  transform: scale(0.95);
}

.button-text {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #2c3e50;
  bottom: -70rpx;
}

.recognized-text {
  font-size: 32rpx;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
} 