.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #f5f7fa;
}

.header {
  margin-bottom: 60rpx;
  text-align: center;
}

.welcome-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 16rpx;
  display: block;
}

.sub-text {
  font-size: 28rpx;
  color: #7f8c8d;
  display: block;
}

.service-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  padding: 0 20rpx;
}

.service-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.service-card:active {
  transform: scale(0.98);
}

.service-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

