.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.recognition-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  margin: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.recognition-text {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
  text-align: center;
  line-height: 1.6;
  opacity: 0.9;
}

.voice-button-area {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 20rpx;
}

.test-button {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.inner-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #4CD964;
  box-shadow: 0 4rpx 12rpx rgba(76, 217, 100, 0.2);
}

.test-button:active {
  transform: scale(0.92);
}

.button-text {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  bottom: -60rpx;
  opacity: 0.8;
} 