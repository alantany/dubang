/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  box-sizing: border-box;
  background: #ffffff;
}

.display-area {
  width: 600rpx;
  min-height: 600rpx;
  background: #fff;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  margin-bottom: 40rpx;
}

.display-image {
  width: 100%;
  height: auto;
  min-height: 600rpx;
  display: block;
  background-color: #f5f5f5;
}

/* 说明文字区域 */
.description-area {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  padding: 30rpx;
  transform: translateY(100%);
  transition: all 0.3s ease;
}

.description-area.show {
  transform: translateY(0);
}

.description-text {
  color: #ffffff;
  font-size: 32rpx;
  line-height: 1.5;
}

.button-area {
  padding: 20rpx;
  position: relative;
}

/* 按钮外层包装 */
.voice-button-wrapper {
  position: relative;
  width: 280rpx;
  height: 280rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 外层装饰圆环 */
.voice-button-outer {
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 主按钮 */
.voice-button {
  width: 220rpx;
  height: 220rpx;
  background: #2ecc71;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 6rpx 20rpx rgba(46, 204, 113, 0.3),
    inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.1),
    inset 0 4rpx 8rpx rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  position: relative;
}

.voice-button:active {
  transform: scale(0.95);
  box-shadow: 
    0 2rpx 10rpx rgba(46, 204, 113, 0.2),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.1),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

/* 语音图标 */
.voice-icon {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 中心圆点 */
.voice-icon::before {
  content: '';
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background: #fff;
  border-radius: 50%;
  transition: all 0.3s ease;
}

/* 外圈 */
.voice-icon::after {
  content: '';
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #fff;
  border-radius: 50%;
  transition: all 0.3s ease;
}

/* 录音动画效果 */
@keyframes recording {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.5;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.voice-icon.recording::after {
  animation: recording 1.5s infinite ease-in-out;
}
