<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 显示区域 -->
    <view class="display-area">
      <image class="display-image" src="/images/display/茶.png" mode="aspectFill"></image>
    </view>
    
    <!-- 按钮区域 -->
    <view class="button-area">
      <view class="voice-button-wrapper">
        <view class="voice-button-outer">
          <view class="voice-button" bindtap="startVoiceInput">
            <view class="voice-icon"></view>
          </view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
