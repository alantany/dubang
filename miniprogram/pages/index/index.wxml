<view class="container">
  <display-area 
    videoPath="{{currentVideo}}" 
    description="{{description}}"
  ></display-area>
  
  <view class="voice-button-area">
    <view class="recognition-text" wx:if="{{lastRecognitionText}}">
      您说的是：{{lastRecognitionText}}
    </view>
    <view 
      class="test-button"
      bindtouchstart="handleTouchStart" 
      bindtouchend="handleTouchEnd"
    >
      <view class="inner-circle"></view>
      <text class="button-text">{{buttonText || '按住说话'}}</text>
    </view>
  </view>
</view>