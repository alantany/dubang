<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <image 
      class="test-image" 
      src="/images/test.png"
      mode="widthFix"
      lazy-load="false"
      show-menu-by-longpress="true"
      binderror="onImageError"
      bindload="onImageLoad"
    ></image>
    
    <!-- 按钮区域 -->
    <view class="button-area">
      <view class="voice-button-wrapper">
        <view class="voice-button-outer">
          <view class="voice-button" bindtap="startVoiceInput">
            <view class="voice-icon {{isRecording ? 'recording' : ''}}"></view>
          </view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
