.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  padding-bottom: 200rpx;
  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", sans-serif;
}

<view class="container">
  <text class="welcome-text">{{description}}</text>
  <display-area 
    videoPath="{{currentVideo}}" 
    description=""
  ></display-area>
  
  <view class="voice-button-area">
    <view class="recognition-text" wx:if="{{lastRecognitionText}}">
      您说的是：{{lastRecognitionText}}
    </view>
    <view 
      class="test-button"
      bindtouchstart="handleTouchStart" 
      bindtouchend="handleTouchEnd"
    >
      <view class="inner-circle"></view>
      <text class="button-text">{{buttonText || '按住说话'}}</text>
    </view>
  </view>
</view>