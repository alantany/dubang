<view class="container">
  <display-area 
    currentImage="{{currentImage}}"
    description="{{description}}"
  />
  <view class="follow-up-area" wx:if="{{followUpQuestions.length > 0}}">
    <view class="follow-up-title">您可能想问：</view>
    <view 
      class="follow-up-item" 
      wx:for="{{followUpQuestions}}" 
      wx:key="index"
      bindtap="handleFollowUpTap"
      data-question="{{item}}"
    >
      {{item}}
    </view>
  </view>
  <view class="input-area">
    <input 
      class="text-input" 
      placeholder="请输入您想说的话" 
      value="{{inputText}}"
      bindinput="handleInput"
    />
    <button 
      class="send-button" 
      bindtap="handleSend"
    >发送</button>
  </view>
  <view 
    class="test-button" 
    bindtouchstart="handleTouchStart"
    bindtouchend="handleTouchEnd"
  >
    <view class="inner-circle"></view>
    <view class="button-text" wx:if="{{buttonText}}">{{buttonText}}</view>
  </view>
</view>