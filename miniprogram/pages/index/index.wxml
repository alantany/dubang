<view class="container">
  <display-area 
    videoPath="{{currentVideo}}" 
    description="{{description}}"
  ></display-area>
  
  <view class="input-area">
    <input 
      class="text-input" 
      type="text" 
      placeholder="请输入您想了解的内容" 
      value="{{inputText}}"
      bindinput="handleInput"
    />
    <button 
      class="send-button" 
      bindtap="handleSend"
    >发送</button>
    <button 
      class="voice-button" 
      bindtouchstart="handleTouchStart" 
      bindtouchend="handleTouchEnd"
    >按住说话</button>
  </view>
</view>